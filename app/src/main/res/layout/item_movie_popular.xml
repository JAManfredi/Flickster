<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMovieImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:minHeight="200dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPlayImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/ivMovieImage"
        app:layout_constraintLeft_toRightOf="@+id/ivMovieImage"
        app:layout_constraintRight_toLeftOf="@+id/ivMovieImage"
        app:layout_constraintTop_toBottomOf="@+id/ivMovieImage"
        app:srcCompat="@drawable/ic_play_circle_outline_white_48dp" />

    <ProgressBar
        android:id="@+id/pbImageLoad"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMovieImage"
        app:layout_constraintLeft_toLeftOf="@+id/ivMovieImage"
        app:layout_constraintRight_toRightOf="@+id/ivMovieImage"
        app:layout_constraintTop_toTopOf="@+id/ivMovieImage" />

</android.support.constraint.ConstraintLayout>